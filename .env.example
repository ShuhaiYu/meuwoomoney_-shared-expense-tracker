# NeonDB (serverless PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Authentication (better-auth + Google OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3000

# Approved users (comma-separated emails allowed to access the app)
ALLOWED_EMAILS=user1@gmail.com,user2@gmail.com

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Resend (email)
RESEND_API_KEY=re_xxxxxxxxxxxx

# Vercel Cron secret (used to authenticate cron job requests)
CRON_SECRET=your_cron_secret

# Notification emails (comma-separated, used by cron jobs)
NOTIFICATION_EMAILS=user1@example.com,user2@example.com
